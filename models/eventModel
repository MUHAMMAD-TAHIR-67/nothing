const mongoose = require("mongoose");

const eventSchema = new mongoose.Schema({
  title: {
    type: String,
    required: true,
  },
  description: {
    type: String,
    required: true,
  },
  date: {
    type: String,
    required: true,
  },
  time: {
    type: String,
    required: true,
  },
  location: {
    type: String,
    required: true,
  },
  category: {
    type: String,
    required: true,
  },
  image: {
    type: String,
    required: true,
  },
  price: {
    type: Number,
    required: true,
  },
  slots: {
    type: Number,
    required: true,
  },
  attendees: {
    type: Array,
    required: true,
  },
  userId: {
    type: String,
    required: true,
  },
});

const eventModel = mongoose.model("event", eventSchema);

module.exports = eventModel;
